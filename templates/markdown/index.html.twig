{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <style>
        .wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        #markdown_form_text {
            display: block;
            width: 100%;
            border: 1px solid #888;
            padding: 5px;
        }
        #markdown-preview {
            width: 100%;
            border-radius: 4px;
            border: 1px solid #ffbb9a;
            min-height: 50px;
            margin-top: 20px;
            background-color: #fff4de;
            padding: 20px;
        }
    </style>
    <div class="wrapper">
        <h1>{{ title }}</h1>

        <div class="row">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>

        <div id="markdown-preview" style="display: none"></div>

    </div>
{% endblock %}
